@using Odjeca.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sports Store @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.css" />
    <script src="https://kit.fontawesome.com/2e5708cab9.js" crossorigin="anonymous"></script>

</head>
<body class="search-background">
    <header>
        <div class="jumbotron text-center" id="head-jumbotron">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index">
                <img class="img-fluid" src="~/images/logo.png" />
            </a>
        </div>
        <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-light" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-light">
                                About Us
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-light">
                                Brands
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="Customer" asp-controller="Store" asp-action="Index">
                                Store
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-light">
                                FAQ
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-light">
                                Contact
                            </a>
                        </li>
                        @if (User.IsInRole(SD.ManagerUser))
                        {
                            <li class="nav-item dropdown text-white-50">
                                <a class="nav-link dropdown-toggle text-light" href"#" id="navbarDropDownMenuLink" role="button" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    Content Management
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropDownMenuLink">
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="Admin">Category</a>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="SubCategory" asp-area="Admin">Sub Category</a>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="StoreItem" asp-area="Admin">Store Item</a>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Discount" asp-area="Admin">Discounts</a>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Admin">Users</a>
                                </div>
                            </li>
                        }

                        @if (HttpContextAccessor.HttpContext.Session.GetInt32(@SD.ssShoppingCartCount) != null)
                        {
                            <li>
                                <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                    @{ var count = HttpContextAccessor.HttpContext.Session.GetInt32(@SD.ssShoppingCartCount); }
                                    <i class="fas fa-shopping-cart"></i>&nbsp; (@count)
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="#" class="nav-link">
                                    <i class="fas fa-shopping-cart"></i>&nbsp; (0)
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="bottom-links" class="row p-3 bottom-links h-25">
        <partial name="_BottomLinksPartial" />
    </div>

    <footer class="border-top footer pl-3 text-white-50" style="background-color: #343a40;">
        <div class="container">
            &copy; 2020 Sports Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
