<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sports Store @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.css" />
    <script src="https://kit.fontawesome.com/2e5708cab9.js" crossorigin="anonymous"></script>

</head>
<body class="search-background">
    <partial name="_HeaderPartialHome" />
    <div class="container-fluid m-0 p-0">
        @RenderBody()
    </div>

    <div id="bottom-links" class="row bottom-links h-50 m-0 p-0 pt-2">
        <partial name="_BottomLinksPartial" />
    </div>

    <footer class="border-top footer text-white-50" style="background-color: #343a40;">
        <div class="container">
            &copy; 2020 Sports Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
