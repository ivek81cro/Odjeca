@page
@using Odjeca.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container backgroundWhite mt-4">
    <br />
    <h2 class="text-info">Create New Account</h2>
    <br />

    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="border backgroundWhite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.Name" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.Name" class="form-control" />
                </div>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.Email" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.Address" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.Address" class="form-control" />
                </div>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.State" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.State" class="form-control" />
                </div>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.PostalCode" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.PostalCode" class="form-control" />
                </div>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.Password" class="col-form-label"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 col-sm-2">
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
                <div class="col-12 col-sm-5">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(SD.ManagerUser))
            {
                <div class="form-group row">
                    <div class="col-12 col-sm-2">
                    </div>
                    <div class="col-12 col-sm-5">
                        <input type="radio" name="rdUserRole" value="@SD.StorageUser" checked />@SD.StorageUser &nbsp;
                        <input type="radio" name="rdUserRole" value="@SD.FrontDeskUser" checked />@SD.FrontDeskUser &nbsp;
                        <input type="radio" name="rdUserRole" value="@SD.ManagerUser" checked />@SD.ManagerUser &nbsp;
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }

            <div class="form-group row">
                <div class="col-12 col-sm-2 offset-sm-2">
                    <button type="submit" class="btn btn-success form-control">Register</button>
                </div>
                <div class="col-12 col-sm-2 offset-sm-2 mt-sm-0 mt-2">
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-primary w-100">Back</a>
                </div>
            </div>

        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
