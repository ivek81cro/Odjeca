@model Odjeca.Models.ViewModels.StoreViewModel

    <div class="jumbotron mb-0 mt-3" id="head-jumbotron">
    </div>
    <div class="row justify-content-center m-0 p-0 pt-2 pb-2 mt-2">
        @if (Model.Discount.ToList().Count > 0)
        {
            <div class="carousel slide carousel-fade" id="CarouselIndex" data-ride="carousel" data-interval="3000">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Discount.Count(); i++)
                    {
                        if (i == 0)
                        {
                        <div class="carousel-item active">
                            @{
                                var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                                var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                            }
                            <img class="img-fluid mx-auto d-block h-25" src="@imgsrc" />
                            <div class="carousel-caption d-none d-md-block">
                                <h4 class="font-weight-bold">@Model.Discount.ToList()[i].Title</h4>
                                <p>@Model.Discount.ToList()[i].Description</p>
                                <a class="btn btn-info" asp-area="Customer" asp-controller="Store" asp-action="Index">Shop</a>
                            </div>
                        </div>
                            }
                            else
                            {
                        <div class="carousel-item">
                            @{
                                var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                                var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                            }
                            <img class="img-fluid mx-auto d-block h-25" src="@imgsrc" />
                            <div class="carousel-caption d-none d-md-block">
                                <h4 class="font-weight-bold">@Model.Discount.ToList()[i].Title</h4>
                                <p>@Model.Discount.ToList()[i].Description</p>
                                <a class="btn btn-info" asp-area="Customer" asp-controller="Store" asp-action="Index">Shop</a>
                            </div>
                        </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#CarouselIndex" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#CarouselIndex" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
    </div>
    <partial name="_DeckNewItemsPartial" />