@model Odjeca.Models.ViewModels.StoreViewModel

<br />
<div class="border row backgroundWhite">
    @if (Model.Discount.ToList().Count > 0)
    {

        <div class="carousel slide container-fluid h-25" data-ride="carousel" data-interval="2000">
            @for (int i = 0; i < Model.Discount.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        @{
                            var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img class="img-fluid mx-auto d-block h-25" src="@imgsrc" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        @{
                            var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img class="img-fluid mx-auto d-block h-25" src="@imgsrc" />
                    </div>
                }
            }
        </div>

    }
</div>