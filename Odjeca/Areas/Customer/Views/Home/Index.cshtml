@model Odjeca.Models.ViewModels.IndexViewModel

<br />
<div class="border row backgroundWhite">
    @if (Model.Discount.ToList().Count > 0)
    {

        <div class="carousel" data-ride="carousel" data-interval="2000">
            @for (int i = 0; i < Model.Discount.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        @{
                            var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img src="@imgsrc" height="200px" class="d-block w-100" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        @{
                            var base64 = Convert.ToBase64String(Model.Discount.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img src="@imgsrc" height="200px" class="d-block w-100" />
                    </div>
                }
            }
        </div>

    }
</div>

<br />
<br />

<div class="backgroundWhite container">

    <ul id="item-filter" class="item-filter-list list-inline text-center">
        <li class="active btn btn-secondary ml-1 mr-1" data-filter=".items-store">Show All</li>

        @foreach (var item in Model.Category)
        {
            <li class="ml-1 mr-1" data-filter=".@item.Name.Replace(" ", string.Empty)">@item.Name</li>
        }
    </ul>


    @foreach (var category in Model.Category)
    {
        <div class="row" id="menu-wrapper">
            <partial name="_ThumbnailAreaPartial" model="@Model.StoreItem.Where(u=>u.Category.Name.Equals(category.Name))" />
        </div>
    }
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>

    <script>

    var posts = $('.post');

    (function ($) {

        $("#item-filter li").click(function () {
            $("#item-filter li").removeClass('active btn btn-secondary');
            $(this).addClass('active btn btn-secondary');

            var selectedFilter = $(this).data("filter");

            $(".items-store").fadeOut();

            setTimeout(function () {
                $(selectedFilter).slideDown();
            }, 300);
        });



    })(jQuery);

    </script>
} 