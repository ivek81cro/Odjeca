@model IEnumerable<StoreItem>

@{ 
    var item = Model.ToList().OrderByDescending(i => i.ArrivalDate);
}

<div class="container-fluid d-flex justify-content-center">
    <p class="display-3">New arrivals</p>
</div>
<div class="card-deck pb-3 pt-3 m-0 p-0 mt-1 ml-5 mr-5">
    @for (int i = 0; i < 5; ++i)
    {
        <div class="card col-12 col-sm-5 col-md-3 mt-2" style="min-width:200px;">
            <img class="card-img-top img-thumbnail m-auto" style="max-width: 9rem;" src="@item.ToList()[i].Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.ToList()[i].Name</h5>
                @{
                    var description = item.ToList()[i].Description.Length > 50 ? 
                        item.ToList()[i].Description.Substring(0, 50) + "..." : item.ToList()[i].Description;
                }
                <p class="card-text">@description</p>
                <a asp-area="Customer" asp-controller="Store" asp-action="Details" asp-route-id="@item.ToList()[i].Id" class="btn btn-primary">Shop</a>
            </div>
        </div>
    }
</div>