@model IEnumerable<StoreItem>

@{ 
    var item = Model.ToList().OrderByDescending(i => i.ArrivalDate);
}

<div class="container-fluid d-flex justify-content-center">
    <p class="display-3">New arrivals</p>
</div>
<div class="card-deck pb-3 pt-3 m-0 p-0 mt-3 ml-5 mr-5">
    @for (int i = 0; i < 5; ++i)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top img-thumbnail m-auto" style="max-width: 9rem;" src="@item.ToList()[i].Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a asp-area="Customer" asp-controller="Store" asp-action="Details" asp-route-id="@item.ToList()[i].Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>