@model Odjeca.Models.ContactFormModel

<div class="container mt-4 mb-4 backgroundWhite">
    <div class="row col-12">
        <div class="card-body col-12 col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="fa fa-envelope"></i> Contact us.
                </div>
                <div class="card-body">
                    <form asp-action="Contact" asp-controller="Home" method="post">
                        <div class="form-group">
                            <label asp-for="Name">Name:</label>
                            <input type="text" class="form-control" placeholder="Enter name" required asp-for="Name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email address:</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required asp-for="Email" />
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message">Message:</label>
                            <textarea asp-for="Message" class="form-control" id="message" rows="6" required></textarea>
                        </div>
                        <div class="mx-auto">
                            <input type="submit" class="btn btn-primary text-right" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body col-12 col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-header bg-success text-white text-uppercase"><i class="fa fa-home"></i> Address</div>
                <div class="card-body">
                    <p>Street address</p>
                    <p>Post code CITY</p>
                    <p>Coutry</p>
                    <p>Email : email@example.com</p>
                    <p>Tel. +33 12 56 11 51 84</p>
                </div>
            </div>
        </div>
    </div>
</div>