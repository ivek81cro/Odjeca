@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model ShoppingCart

<div class="container backgroundWhite mt-4">
    <h2 class="text-info">Item Details</h2>
    <form asp-action="Details" asp-controller="Store" asp-route-OrderId="@Model" method="post">
        <div class="border rounded row pt-2">
            <div class="col-12 d-md-none">
                <img src="@Model.StoreItem.Image" class="img-fluid img-thumbnail border rounded" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StoreItem.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.Description" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        @Html.Raw(Model.StoreItem.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.Manufacturer" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StoreItem.Manufacturer" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.Price" readonly class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StoreItem.Price" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.CategoryId" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StoreItem.Category.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="StoreItem.SubCategoryId" class="text-info font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="StoreItem.SubCategory.Name" readonly class="form-control" />
                    </div>
                </div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label asp-for="Count" class="text-info font-weight-bold"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-success form-control">Back To Store</a>
                    </div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="col-md-4">
                            <button type="submit" value="Add To Cart" class="btn btn-primary form-control">Add To Cart</button>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-3 offset-1 d-none d-md-block">
                <img src="@Model.StoreItem.Image" class="img-fluid  border rounded" />
            </div>
        </div>
        <input asp-for="StoreItemId" hidden />
    </form>
</div>

@section Scripts{
    <script>
        $(".footer-custom").hide();
        $(".bottom-custom").hide();
    </script>
}

