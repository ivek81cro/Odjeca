@model Odjeca.Models.ViewModels.StoreViewModel

<div class="backgroundWhite container-fluid col-12 mt-3 mb-3" style="min-height:600px;">
    <h2 class="mt-3">Store</h2>
    @* Category filter *@
    <div id="item-filter" class="accordion col-md-2 col-12 float-left">
        <h6>Filter</h6>
        <a class="btn active w-75 mr-1" data-filter=".items-store" data-toggle="collapse" data-target="#collapseAll">Show All</a>
        @foreach (var item in Model.Category)
        {
            <div data-toggle="collapse" data-target="#@item.Name">
                <a class="btn w-75 mr-1" data-filter=".@item.Name.Replace(" ", string.Empty)">@item.Name</a>
            </div>

            var subCat = Model.SubCategory.Where(si => si.CategoryId == item.Id);

            <ul id="@item.Name" class="collapse  w-75 mr-1 justify-content-center" data-parent="#item-filter">
                @foreach (var subItem in subCat)
                {
                    <li class="btn d-flex w-100 justify-content-center" data-filter=".@subItem.Name.Replace(" ", string.Empty)">@subItem.Name</li>
                }
            </ul>
        }
    </div>

    @* Group each category with it's items*@
    <div class="col-md-9 row col-12 min-vh-50">
        @foreach (var category in Model.SubCategory)
        {
            <div class="col-md-12 row" id="menu-wrapper">
                <partial name="_ThumbnailAreaPartial" model="@Model.StoreItem.Where(u=>u.SubCategory.Name.Equals(category.Name))" />
            </div>
        }
    </div>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous">
    </script>

    <script>

        var posts = $('.post');

        (function ($) {

            $("#item-filter li").click(function () {
                $("#item-filter li").removeClass('active');
                $(this).addClass('active');

                var selectedFilter = $(this).data("filter");

                $(".items-store").fadeOut();

                setTimeout(function () {
                    $(selectedFilter).fadeIn();
                }, 300);
            });

        })(jQuery);

    </script>
} 