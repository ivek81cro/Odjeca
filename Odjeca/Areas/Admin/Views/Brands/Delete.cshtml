@model Odjeca.Models.Brands

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container backgroundWhite rounded mt-3">
    <br />
    <h2>Brands Delete</h2>
    <hr />
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
        <div class="row form-group ">
            <div class="col-12 col-sm-5 offset-sm-2">
                @{
                    var base64 = Convert.ToBase64String(Model.Image);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgsrc" class="img-thumbnail m-auto" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-sm-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-12 col-sm-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div><div class="form-group row">
            <div class="col-12 col-sm-2">
                <label asp-for="Description" class="custom-label"></label>
            </div>
            <div class="col-12 col-sm-5">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-12 col-sm-5 offset-sm-2">
                <partial name="_DeleteEditAndBackButton" model="Model.Id" />
            </div>
        </div>
    </form>
</div>
