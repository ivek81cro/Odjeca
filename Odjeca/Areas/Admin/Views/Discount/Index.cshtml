@model IEnumerable<Discount>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="border backgroundWhite">
        <div class=" row">
            <div class="col-6">
                <h2 class="text-info">Discount List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped border">
                        <thead>
                            <tr class="table-secondary">
                                <th>
                                    @Html.DisplayNameFor(m => m.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.DiscountAmmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.MinimumAmmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.IsActive)
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.DiscountAmmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.MinimumAmmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.IsActive)
                                    </td>
                                    <td>
                                        <partial name="_TableButtonPartial" model="item.Id" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No Discount Exits!</p>
            }
        </div>
    </div>
</div>