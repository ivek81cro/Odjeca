@model Odjeca.Models.ViewModels.StoreItemViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <br />
    <h2 class="text-info">Details Menu Item</h2>
    <br />
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreItem.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Description" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.StoreItem.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Price" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreItem.Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Manufacturer" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreItem.Manufacturer" class="form-control"></input>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreItem.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.SubCategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreItem.SubCategory.Name" class="form-control" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.StoreItem.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DetailsAndBackButton" model="Model.StoreItem.Id" />
            </div>
        </div>
    </div>
</div>